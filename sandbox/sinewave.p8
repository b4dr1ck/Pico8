pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
function _init()
 cls()
 xspeed=0.5
 x=0
 y=120
 col=8
 amp=1
 wpc=1/32 --waves per cycle
end

function _update60()
 
 x+=xspeed
 y=amp * sin((wpc) * x) + y
 
 if x > 127 then 
 	x = 0 
 	--y = flr(rnd(80)) + 20
 	col = flr(rnd(15)) + 1
 	amp = rnd(3)+.05
 end
end

function _draw()
 rectfill(x,y,x,y,col)
 print("sine wave...",0,0,7)
end

