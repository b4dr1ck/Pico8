pico-8 cartridge // http://www.pico-8.com
version 42
__lua__

-- set values for level-table based on levels-table
function create_level()
	for y=1,16 do
		add(level,{})
		rows=split(levels[current_level],"\n",false)
		for x=1,16 do
			add(level[y],x)	
			cols=split(rows[y],"",false)
			level[y][x]=cols[x]
			mset(x-1,y-1,level[y][x])
		end
	end
end

